<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:screenReaderFocusable="true"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:text="Card Name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_ctitle"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_cno"
        android:text="Card Number:"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:enabled="false"
        android:inputType="numberDecimal"
        android:id="@+id/et_cno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_expm"
        android:text="Card Expiry Month:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:enabled="false"
        android:id="@+id/et_expm"
        android:layout_width="match_parent"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_expd"
        android:text="Card Expiry Year:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:enabled="false"
        android:id="@+id/et_expd"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_cvv"
        android:text="CVV NO:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:enabled="false"
        android:inputType="numberDecimal"
        android:id="@+id/et_cvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/save_card_button"
        android:text="Save Card"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Edit"
        android:id="@+id/edit_card_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Remove"
        android:id="@+id/rmv_card_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>